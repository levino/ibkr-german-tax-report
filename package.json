{
  "name": "ibkr-german-tax-report",
  "version": "0.0.2",
  "type": "module",
  "description": "A cli tool to create tax reports for German tax declarations for IBKR trading reports.",
  "main": "dist/index.js",
  "bin": {
    "ibkr-german-tax-report": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.cli.json",
    "start": "node dist/cli.js generate",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "prepublishOnly": "npm run build",
    "claude": "claude --dangerously-skip-permissions"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/levino/ibkr-german-tax-report.git"
  },
  "author": "Levin Keller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/levino/ibkr-german-tax-report/issues"
  },
  "homepage": "https://github.com/levino/ibkr-german-tax-report#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "inquirer": "^10.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.113",
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.4.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  }
}
