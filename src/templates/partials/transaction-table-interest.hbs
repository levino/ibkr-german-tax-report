<table class="transaction-table">
    <thead>
        <tr>
            <th>CSV Line</th>
            <th>Description</th>
            <th>Currency</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        {{#each transactions}}
        <tr>
            <td class="line-number">{{defaultTo lineNumber "—"}}</td>
            <td class="description">{{description}}</td>
            <td>{{currency}}</td>
            <td class="amount {{../amountClass}}">{{formatCurrency amount}}</td>
        </tr>
        {{/each}}
        <tr class="sum-row">
            <td class="line-number">—</td>
            <td class="description"><strong>{{totalLabel}}</strong></td>
            <td><strong>EUR</strong></td>
            <td class="amount {{amountClass}} total"><strong>{{formatCurrency (sum transactions 'amount')}}</strong></td>
        </tr>
    </tbody>
</table>